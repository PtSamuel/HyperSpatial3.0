/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

button {
  background-color: #b1b1b1;
}

.viewport {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
}

#webgl {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

#board {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.main {
  align-items: center;
  z-index: 100;
  padding: 5px;
  color: #243B6B;
}

.header {
  background-color: transparent;
  width: 100%;
  color: white;
  display: flex;
  justify-content: space-between;
  font-size: small;
}

.header .left {
  text-align: left;
}

.header .right {
  text-align: right;
}

.bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  text-align: center;
  /* background-color: red; */
  flex-direction: row;
  justify-content: space-between;
  padding: 10px 0;
}


.bottom button {
  margin: 0 10rpx;
  background-color: white;
  width: 30%;
  font-size: 12px;
  z-index: 10;
  color: black;
}


